{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "CommonJS",    
        "target": "ES2020",
        "lib": ["ES2020"],
        "alwaysStrict": true,
        "strict": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["@cloudflare/workers-types"]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}